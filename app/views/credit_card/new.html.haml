%body
  .wrapper
    .l-container.clearfix
      = render 'users/side'
      .mypage-content
        %section.mypage-content__chapter-container
          %h2.signup-main__chapter-head クレジットカード情報入力
          .signup-main__content
            = form_tag(pay_user_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
              .field
                .signup-main__form-group
                  %label.field-label カード番号
                  %span.signup-main__form-require 必須
                  .field-input
                    = text_field_tag "number", "", class: "signup-main__input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                    %ul.signup-main__card-list
                      %li
                        = image_tag asset_path('visa.png'), size: "49x20"
                      %li
                        = image_tag asset_path('master.png'), size: "34x20"
                      %li
                        = image_tag asset_path('saison.png'), size: "32x20"
                      %li
                        = image_tag asset_path('jcb.png'), size: "34x20"
                      %li
                        = image_tag asset_path('american.png'), size: "21x20"
                      %li
                        = image_tag asset_path('diners.png'), size: "32x20"
                      %li
                        = image_tag asset_path('discover.png'), size: "32x20"
              .field
                .signup-main__form-group.signup-main__form-expire
                  %label.field-label 有効期限
                  %span.signup-main__form-require 必須
                  %br
                  .field-input
                    %select#exp_month{name: "exp_month", type: "text", class:"signup-main__select-wrap.signup-main__select-wrap--half"}
                      %option{value: ""} --
                      %option{value: "1"}01
                      %option{value: "2"}02
                      %option{value: "3"}03
                      %option{value: "4"}04
                      %option{value: "5"}05
                      %option{value: "6"}06
                      %option{value: "7"}07
                      %option{value: "8"}08
                      %option{value: "9"}09
                      %option{value: "10"}10
                      %option{value: "11"}11
                      %option{value: "12"}12
                    %span 月／
                    %select#exp_year{name: "exp_year", type: "text", class:"signup-main__select-wrap.signup-main__select-wrap--half"}
                      %option{value: ""} --
                      %option{value: "2020"}20
                      %option{value: "2021"}21
                      %option{value: "2022"}22
                      %option{value: "2023"}23
                      %option{value: "2024"}24
                      %option{value: "2025"}25
                      %option{value: "2026"}26
                      %option{value: "2027"}27
                      %option{value: "2028"}28
                      %option{value: "2029"}29
                      %option{value: "2030"}30
                    %span 年
              .field
                .signup-main__form-group
                  %label.field-label セキュリティコード
                  %span.signup-main__form-require 必須
                  %ul.signup-main__has-error-text{ id: 'security-code-error-wrapper' }
                  .signup-main__seqcode
                    .signup-main__seqcode--text{ id: 'seqcode-tips-toggle' }
                      %span.signup-main__form-question
                        ?
                      カード裏面の番号とは？
                  .field-input
                    = text_field_tag "cvc", "", class: "signup-main__input-default", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
                    #card_token
                    = submit_tag "追加する", id: "token_submit", class: 'signup-main__btn-default signup-main__btn-red'
